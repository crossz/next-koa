{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "es2017"
    ],
    "module": "commonjs",
    "jsx": "react",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": false,
    "declaration": true,
    "removeComments": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "examples",
    "*.test.ts",
    "*.test.tsx"
  ]
}